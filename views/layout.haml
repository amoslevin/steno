!!!
%html
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
    %title
      - if content_for? :title
        = content_for :title
      - else
        Steno

    %link{rel: 'stylesheet', href: stylesheet_path('bootstrap.css')}/
    %link{rel: 'stylesheet', href: stylesheet_path('app.css')}/
  %body
    /[if lt IE 7]
      %p.chromeframe
        You are using an outdated browser.
        %a(href="http://browsehappy.com/") Upgrade your browser today
        or
        %a(href="http://www.google.com/chromeframe/?redirect=true") install Google Chrome Frame
        to better experience this site.

    %header#header
      .navbar.navbar-default.navbar-static-top
        .navbar-header
          %a.navbar-brand(href='/')
            Steno for Openbylaws.org.za

        %ul.nav.navbar-nav.navbar-right
          %li
            %a(href="https://github.com/longhotsummer/steno" target="_blank")
              %i.fa.fa-github.fa-lg
              Steno on Github
          %li
            %a(href="https://github.com/longhotsummer/za-by-laws" target="_blank")
              %i.fa.fa-github.fa-lg
              ZA By-laws on Github

    #wrapper
      = yield

      = javascript_tag 'jquery-1.10.2.min.js'
      = javascript_tag 'app.js'
