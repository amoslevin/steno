#xml-step.tab-pane
  .row
    .col-xs-6
      = partial 'editor', engine: :haml, locals: {id: 'doc-xml'}

    .col-xs-6
      %ul.nav.nav-tabs
        %li.active
          %a(href="#xml-html-tab" data-toggle="tab") HTML
        %li
          %a(href="#xml-toc-tab" data-toggle="tab") Table of Contents
      .tab-content
        #xml-html-tab.tab-pane.active
          #xml-doc-html.an-container
        #xml-toc-tab.tab-pane
          #xml-doc-toc.toc

  .step-buttons
    .row
      .col-xs-6
        .buttons.pull-right
          %button#render-btn.btn.btn-default.with-spinner
            %i.fa.fa-spinner.fa-spin
            Preview
      .col-xs-6
        .buttons.pull-right
          %button.btn.btn-primary.next-step Looks good, next step
